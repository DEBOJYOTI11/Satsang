<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Actvities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/colorBack"
        >
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/satsang"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_weight="3"
        >




        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >



            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:id="@+id/District"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <TextView

                    android:id="@+id/location_address_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="District Name"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:id="@+id/State"
                android:layout_below="@+id/District"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/location_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="State Name"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/State"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prayer_time_view"
                    android:text="Praying Time"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />


            </android.support.v7.widget.CardView>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorBack"
            android:layout_weight="9"
            >
            <Switch
                android:text="Disable Alarms  "
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>


    </LinearLayout>




</LinearLayout>
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context=".Actvities.MainActivity">

    <Button
        android:id="@+id/fetch_address_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fetch_address"
        android:onClick="fetchAddressButtonHandler" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/location_address_view"
        android:text="My District"
        android:layout_below="@+id/fetch_address_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <TextView
        android:layout_below="@+id/location_address_view"
        android:id="@+id/prayer_time_view"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State and PrayerTime"
         />
</RelativeLayout>
